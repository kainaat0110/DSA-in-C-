// Online C++ compiler to run C++ program online
#include <iostream>
using namespace std;
#include <algorithm>

int main() {

    int n;
    cin>>n;
    int arr[n];
    for(int i =0; i<n; i++){
        cin>>arr[i];
    }
    if(n == 1){
        cout<<"1";
    }
    else{
      int ans = 0;
    for(int i = 1; i<n ; i++){
        if(arr[i-1]<arr[i] && arr[i]>arr[i+1]){
            ans++;
        } 
    }
    cout<<ans<<" days are record breaking days"<<endl;  
    }
    
    

    
    return 0;
}
